package learningJava;
import java.util.*;
public class returnSum {
	
	
	//this is function for return Sum
			public static int returnSum(int arr [], int sum) {
				
				for(int i = 0; i < arr.length; i++) {
					sum = arr[i] + sum;
						
					}
				System.out.println(sum);
				return sum;
				
				
			}
			
			
			//this function is for call returnSum
		
			public static void main(String[] args) {
			int sum = 0;
			int arr[] = {9,8,9};
			for(int i = 0 ; i < arr.length; i++) {
			}
			
			
			returnSum(arr, sum);

				
			}
	}


